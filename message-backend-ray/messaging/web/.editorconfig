root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini,md}]
indent_style = space
indent_size = 4

[*.py]
line_length=99
multi_line_output=3
default_section=THIRDPARTY

[*.{js,jsx}]
indent_style = space
indent_size = 2

[*.{html,css,scss,json,yml,sh}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{Dockerfile}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
